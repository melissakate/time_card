<div class="well well-small">
<h1>
  Time Entry
</h1> 
</div>
<div class="well well-large">
<%if flash[:notice]%>
  <div class="alert alert-info">
    <b>Notice: </br>  <%=flash[:notice]%>
      </div>
<%end%>
<a href= "/time_entries/new" class="btn"> Add Time Entry </a>
<br>
<br>
<table border="0" class="table table-striped" >
  <tr>
    <th> Date </th>
    <th> Time_in </th>
    <th> Time_out </th>
    <th> accomplishment </th>
    <th> Remarks </th>

  </tr>

  <% @time_entries.each do |time_entry| %>
    <tr>
      <td><%= time_entry.date %> </td >
      <td><%= time_entry.time_in %> </td >
      <td><%= time_entry.time_out %> </td >
      <td><%= time_entry.accomplishments %> </td >
      <td><%= time_entry.remarks%> </td >

        <td>
          <%= link_to "Show", "/time_entries/#{time_entry.id}", method: "get" %>
          <%= link_to "Edit", "/time_entries/#{time_entry.id}/edit", method: "get" %>
          <%= link_to "delete", "/time_entries/#{time_entry.id}", method: "delete", confirm: "are you sure do you want to delete this file #{time_entry.id}" %>

      </tr>

            <%end%> 
          </table>
        </div>

